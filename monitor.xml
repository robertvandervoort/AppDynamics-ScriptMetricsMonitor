<monitor>
    <name>Script Metrics Monitor</name>
    <type>managed</type>
    <description>Collects custom metrics from shell scripts using a Python script.</description>
    <monitor-configuration>
    </monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
        <execution-timeout-in-secs>60</execution-timeout-in-secs>
        <name>Run</name>
        <type>executable</type>
        <task-arguments>
        </task-arguments>
        <executable-task>
            <type>file</type>
            <file os-type="linux">ScriptMetricsMonitor.py</file>
            <file os-type="windows">ScriptMetricsMonitor.py</file>
        </executable-task>
    </monitor-run-task>
</monitor>